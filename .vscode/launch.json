    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Jasmine Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceRoot}/server/node_modules/jasmine/bin/jasmine.js",
            "stopOnEntry": false,
            "args": [
                "JASMINE_CONFIG_PATH=spec/support/jasmine.json"
            ],
            "cwd": "${workspaceRoot}/server"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${file}"
        }
    ]
}